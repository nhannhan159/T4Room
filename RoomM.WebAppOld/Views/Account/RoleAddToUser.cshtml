@{
    ViewBag.Title = "Role Add To User";
    // Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="spacerBody">
    <p>&nbsp;</p>
    @Html.ActionLink("Tạo quyền mới", "RoleCreate") | @Html.ActionLink("Danh mục quyền", "RoleIndex")
        
<h2>Thêm quyền cho người dùng</h2>

@using(Html.BeginForm("RoleAddToUser", "Account")){
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <div class="message-success">@ViewBag.ResultMessage</div>
    <p>
        Tên tài khoản : @Html.TextBox("UserName")
        Tên quyền: @Html.DropDownList("RoleName", ViewBag.Roles as SelectList)
        
    </p>
    
    <input type="submit" value="Lưu" />
}



<div class="hr"></div>
@using(Html.BeginForm("GetRoles", "Account")){
    @Html.AntiForgeryToken()
    <p>Tên tài khoản : @Html.TextBox("UserName") 
        <input type="submit" value="Lấy quyền của người dùng" />
    </p>
}
       
@if(ViewBag.RolesForThisUser != null) {
    <text>
    <h3>Quyền của người dùng </h3>
    <ol>
@foreach (string s in ViewBag.RolesForThisUser){
    <li>@s</li>   
}
                </ol>
    </text>
}
        </div>